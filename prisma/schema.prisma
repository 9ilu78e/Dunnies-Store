// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  fullName  String
  email     String   @unique
  phone     String?
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
}

model Category {
  id          String   @id @default(cuid()) @map("_id")
  name        String   @unique
  description String?
  imageUrl    String?
  priority    String   @default("normal") // "popular", "trending", "new", "normal"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  products    Product[]
}

model Product {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String
  price       Float
  imageUrl    String
  categoryId  String?
  priority    String   @default("normal") // "bestseller", "featured", "trending", "new", "normal"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  category    Category? @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
}

model Order {
  id          String     @id @default(cuid()) @map("_id")
  userId      String
  total       Float
  status      String     @default("pending")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User       @relation(fields: [userId], references: [id])
  orderItems  OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid()) @map("_id")
  orderId   String
  productId String
  quantity  Int

  order     Order    @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}